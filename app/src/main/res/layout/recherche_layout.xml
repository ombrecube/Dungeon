<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/lagon">

    <ImageSwitcher
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageSwitcher"
        android:layout_marginTop="97dp"
        android:background="@android:mipmap/sym_def_app_icon"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Je te choisis"
        android:id="@+id/Btn_choose"
        android:layout_alignTop="@+id/Btn_cancel"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/imageSwitcher" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Non"
        android:id="@+id/Btn_cancel"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageSwitcher" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/Name"
        android:layout_marginTop="31dp"
        android:text="Name"
        android:layout_below="@+id/Btn_choose"
        android:layout_toStartOf="@+id/nb_eleves" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Eleve"
        android:id="@+id/nb_eleves"
        android:layout_alignTop="@+id/nb_profs"
        android:layout_alignEnd="@+id/Btn_choose" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Profs"
        android:id="@+id/nb_profs"
        android:layout_above="@+id/desc"
        android:layout_alignStart="@+id/Btn_cancel"
        android:layout_marginStart="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Level"
        android:id="@+id/level"
        android:layout_above="@+id/desc"
        android:layout_alignEnd="@+id/Btn_cancel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Description"
        android:id="@+id/desc"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/Name"
        android:layout_toStartOf="@+id/nb_eleves" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_cptnce"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/desc"
        android:layout_alignStart="@+id/desc" />

</RelativeLayout>